<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp">
       <Button
           android:id="@+id/ps_fanhui"
           android:text="返回"
           android:layout_weight="1"
           android:background="@color/colorAccent1"
           android:layout_width="0dp"
           android:layout_height="40dp" />
       <TextView
           android:text="个人信息"
           android:textSize="20dp"
           android:background="@color/colorAccent1"
           android:gravity="center"
           android:layout_weight="4"
           android:layout_width="0dp"
           android:layout_height="40dp" />
       <Button
           android:id="@+id/ps_baocun"
           android:text="保存"
           android:background="@color/colorAccent3"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="40dp" />
   </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="20dp"
            android:text="  头像"
            android:background="@color/colorAccent1"
            android:gravity="center|left"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/ps_head"
            android:src="@drawable/img0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
    android:textSize="20dp"
    android:text="  账号"
    android:gravity="center|left"
            android:background="@color/colorAccent1"
    android:layout_weight="5"
    android:layout_width="0dp"
    android:layout_height="60dp" />
    <TextView
        android:id="@+id/ps_zhanghao"
        android:text="1233424"
        android:textColor="@color/colorAccent2"
        android:textSize="20dp"
        android:gravity="center|right"
        android:background="@color/colorAccent1"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>
    <LinearLayout
        android:background="@color/colorAccent1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="20dp"
            android:text="  密码"
            android:gravity="center|left"
            android:layout_weight="5"
            android:background="@color/colorAccent1"
            android:layout_width="0dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/ps_xiugai"
            android:textSize="20dp"
            android:text="点击修改> "
            android:textColor="@color/colorAccent2"
            android:background="@color/colorAccent1"
            android:layout_weight="20"
            android:gravity="center|right"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="20dp"
            android:text="  手机号"
            android:gravity="center|left"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:background="@color/colorAccent1"
            android:layout_height="60dp" />
        <EditText
            android:id="@+id/ps_tel"
            android:textSize="20dp"
            android:text="17861404961 "
            android:textColor="@color/colorAccent2"
            android:background="@color/colorAccent1"
            android:layout_weight="4"
            android:gravity="center|right"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/ps_tuichu"
            android:text="退出当前账号"
            android:textSize="20dp"
            android:textColor="@color/colorAccent4"
            android:background="@color/colorAccent1"
            android:layout_width="match_parent"

            android:layout_gravity="bottom"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>